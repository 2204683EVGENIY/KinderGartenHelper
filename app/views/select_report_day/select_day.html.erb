<div class="container-fluid my-3 mx-0 p-0 row">
  <div class="container-fluid m-0 py-1 px-1 col-12 d-flex justify-content-center">
    <%= form_with url: select_day_path, method: :get, data: { turbo_frame: "childrens_list" } do |form| %>
      <label for="day">Report day:</label>
      <input type="date" id="day" name="day" value="<%= day %>" min="2025-01-01" max="<%= max_available_day(day) %>" />
      <%= form.submit "Choose day", class: "btn btn-primary p-1 ms-1 me-2 my-0" %>
    <% end %>
  </div>
  <div class="container-fluid m-0 py-1 px-1 col-12 d-flex justify-content-center">
    <div class="m-0 p-0 d-flex flex-column">
      <p class="m-0 p-0 lh-1">Group title: <b><%= group.title %></b></p>
      <p class="m-0 p-0 lh-1">Group mentor: <b><%= mentor.first_name %></b></p>
    </div>
  </div>
  <div class="container-fluid m-0 py-1 px-1 col-12 d-flex justify-content-center">
    <%= turbo_frame_tag "childrens_list" do %>
      <%= turbo_stream_from "#{ group.title }_childrens_list_#{ day.to_date }" %>
      <%= form_with url: add_info_to_childrens_path(params: { day: day }), method: :post, data: { turbo: true } do |form| %>
        <p class="m-0 pb-2 pt-0 px-0 text-center">Current day: <b><%= correct_date(day.to_date) %></b></p>
        <table class="table table-sm text-center" id="childrens">
          <tr>
            <th>Checkbox</th>
            <th>Child name</th>
            <th>Add Info</th>
          </tr>
          <% childrens.each do |child| %>
            <tr id="child_<%= child.id %>">
              <td class="<%= bg_color_by_visit(child, day.to_date) %>">
                <div class="d-flex justify-content-center mt-2 mb-0 mx-0 p-0">
                  <input class="form-check-input" type="checkbox" id="child_checkbox_<%= child.id %>" value="<%= child.id %>" name="child_ids[]">
                </div>
              </td>
              <td class="<%= bg_color_by_visit(child, day.to_date) %>">
                <div class="m-0 p-0 d-flex flex-column">
                  <p class="m-0 p-0 lh-1"><%= child.first_name %></p>
                  <p class="m-0 p-0 lh-1"><%= child.middle_name %></p>
                  <p class="m-0 p-0 lh-1"><%= child.last_name %></p>
                </div>
              </td>
              <td class="<%= bg_color_by_visit(child, day.to_date) %>"><%= child_info_about_visit(child, day) %></td>
            </tr>
          <% end %>
        </table>
        <button type="button" class="btn btn-primary p-1 m-0 w-100" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Mark as...
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Mark as...</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
              </div>
              <div class="modal-body">
                <div class="m-0 p-0 d-flex flex-row">
                  <%= form.submit "Mark as visited", class: "btn btn-primary p-1 mx-1 my-0 w-100", "data-bs-dismiss" => "modal" %>
                  <%= form.submit "Mark as skiped", class: "btn btn-primary p-1 mx-1 my-0 w-100", "data-bs-dismiss" => "modal" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
